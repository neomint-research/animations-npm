{
  "name": "@neomint/animations",
  "version": "1.0.0",
  "description": "Professional React animation library featuring advanced data network visualizations with customizable themes and performance optimization",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:clean": "rm -rf dist && rm -rf coverage",
    "build:watch": "rollup -c -w",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "analyze": "rollup -c --environment ANALYZE",
    "release": "npm run validate && npm version",
    "validate": "npm run format:check && npm run lint && npm run test:ci && npm run build",
    "prepare": "npm run build",
    "precommit": "npm run format:check && npm run lint",
    "prepublishOnly": "npm run validate"
  },
  "keywords": [
    "react",
    "animation",
    "data-visualization",
    "network-animation",
    "neomint",
    "typescript",
    "react-component",
    "visualization",
    "animated-components",
    "performance",
    "accessibility"
  ],
  "author": "NEOMINT Research",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/neomint-research/animations-npm.git"
  },
  "bugs": {
    "url": "https://github.com/neomint-research/animations-npm/issues"
  },
  "homepage": "https://github.com/neomint-research/animations-npm#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "iconoir-react": "7.11.0",
    "prop-types": "15.8.1"
  },
  "devDependencies": {
    "@babel/core": "7.23.9",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "7.20.7",
    "@babel/preset-env": "7.23.9",
    "@babel/preset-react": "7.23.3",
    "@rollup/plugin-babel": "6.0.4",
    "@rollup/plugin-commonjs": "25.0.7",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "babel-jest": "29.7.0",
    "eslint": "8.56.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "^30.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup": "4.9.6",
    "rollup-plugin-terser": "7.0.2"
  }
}
