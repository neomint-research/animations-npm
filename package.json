{
  "name": "@neomint/animations",
  "version": "1.0.0",
  "description": "Professional React animation library featuring advanced data network visualizations with customizable themes and performance optimization",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "sideEffects": false,
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:ts && npm run build:rollup",
    "build:ts": "tsc",
    "build:rollup": "rollup -c",
    "build:prod": "npm run clean && npm run build",
    "build:dev": "npm run build:ts && rollup -c -w",
    "build:clean": "npm run clean && npm run build:prod",
    "build:watch": "concurrently \"npm run build:ts -- --watch\" \"rollup -c -w\"",
    "build:analyze": "rollup -c --environment ANALYZE",
    "build:ts:watch": "tsc --watch",
    "build:types": "tsc --emitDeclarationOnly",
    "dev": "npm run build:watch",
    "test": "npm run test:coverage",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false --ci --maxWorkers=2",
    "lint": "npm run lint:check",
    "lint:check": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src/ --fix --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "docs:generate": "typedoc src/index.js --out docs/api",
    "docs:serve": "npx http-server docs/api",
    "quality:all": "npm run lint:check && npm run format:check && npm run test:coverage",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "analyze": "npm run build:analyze",
    "analyze:bundle": "rollup -c --environment ANALYZE && echo 'Bundle analysis complete'",
    "perf:check": "npm run build:prod && ls -la dist/",
    "clean": "rimraf dist coverage .jest-cache .rollup.cache",
    "release": "npm run validate && npm version",
    "validate": "npm run quality:all && npm run security:audit && npm run build:clean",
    "prepare": "npm run build:prod",
    "precommit": "npm run format:check && npm run lint:check",
    "prepublishOnly": "npm run quality:all && npm run build:clean"
  },
  "keywords": [
    "react",
    "animation",
    "data-visualization",
    "network-animation",
    "neomint",
    "typescript",
    "react-component",
    "visualization",
    "animated-components",
    "performance",
    "accessibility"
  ],
  "author": "NEOMINT Research",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/neomint-research/animations-npm.git"
  },
  "bugs": {
    "url": "https://github.com/neomint-research/animations-npm/issues"
  },
  "homepage": "https://github.com/neomint-research/animations-npm#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=6.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "iconoir-react": "7.11.0",
    "prop-types": "15.8.1"
  },
  "devDependencies": {
    "@babel/core": "7.27.4",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "7.20.7",
    "@babel/preset-env": "7.27.2",
    "@babel/preset-react": "7.27.1",
    "@rollup/plugin-babel": "6.0.4",
    "@rollup/plugin-commonjs": "28.0.6",
    "@rollup/plugin-node-resolve": "16.0.1",
    "@rollup/plugin-typescript": "^12.1.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "babel-jest": "30.0.2",
    "concurrently": "^9.1.0",
    "eslint": "9.29.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.44.0",
    "@rollup/plugin-terser": "^0.4.4",
    "rollup-plugin-visualizer": "^5.12.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  }
}
